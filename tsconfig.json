{
  "compilerOptions": {
    "target": "es6" /* 최신 브라우저는 es6을 대부분 지원한다. */,
    "module": "ES6" /* 모듈 시스템을 지정한다. */,
    "lib": ["es5", "es6", "dom"],
    "removeComments": true, //컴파일시 주석제거
    "resolveJsonModule": true,

    "moduleResolution": "node",
    "declaration": true,
    "outDir": "build",
    "strict": true
  },
  "include": [
    "src/index.ts"
  ],
}
